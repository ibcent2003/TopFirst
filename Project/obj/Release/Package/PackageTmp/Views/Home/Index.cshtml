</div>



<div id="blog" class="section pb_70 bg_redon">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="heading_s1 text-center">
                    <h2>Currency Converter</h2>
                </div>
                <div class="clearfix small_divider"></div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="container">
                    <div class="field_form">
                        <form class="needs-validation row" novalidate="">
                            <div class="form-group col-md-4">
                                <label for="validationCustom01">Currency</label>
                                @Html.DropDownListFor(x => x.CurrencyConverterForm.Country, Model.Currencies, "Select Currency", new { @class = "custom-select form-control first_null not_chosen", onchange = "CurrencyChange()" })
                                @Html.ValidationMessageFor(x => x.CurrencyConverterForm.Country)
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustom02">Amount</label>
                                @Html.TextBoxFor(x => x.CurrencyConverterForm.Amount, new { @class = "form-control", onkeyup = "CurrencyChange()" })
                            </div>
                            <div class="form-group col-md-4">
                                <label for="validationCustomUsername">Rate</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">                                       
                                      ₦ <span id="rate">0.00</span>
                                    </div>                                  
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                Total: ₦ <span id="totalAmount">0.00</span>
                                @*<label for="validationCustom03">Total: # </label>
        <input type="text" class="form-control" id="validationCustom03" required="">*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="section pb_20">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 animation animated fadeInUp" data-animation="fadeInUp" data-animation-delay="0.2s" style="animation-delay: 0.2s; opacity: 1;">
                <div class="heading_s1 text-center">
                    <h2>Recent Exchange Rates History</h2>
                </div>
                <div class="small_divider clearfix"></div>
            </div>
        </div>
        <div class="row justify-content-center">

            <div class="col-md-12 animation animated fadeInUp" data-animation="fadeInUp" data-animation-delay="0.2s" style="animation-delay: 0.2s; opacity: 1;">

                <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                    <thead>
                        <tr style="font-size: 12px;">
                            <th>S/N</th>
                            <th>Date</th>
                            <th>Currency</th>
                            <th>We Buy</th>
                            <th>We Sell</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.rateList.Count != 0)
                        {
                            int i = 0;
                            foreach (var item in Model.rateList)
                            {
                                ++i;
                                <tr style="font-size: 12px;">
                                    <td>
                                        @i

                                    <td>@item.WeeklyDate.ToLongDateString()</td>

                                    <td>
                                        <img src="~/Content/TopFirstDocument/Photo/@item.Logo" height="50" width="70" />
                                        @item.CurrencyName

                                    </td>

                                    <td>₦@item.Buying</td>
                                    <td>₦@item.Selling</td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Records Found!...</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>




        </div>
    </div>
</div>



    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script>

        var calculate = function () {
            var rate = Number($("#CurrencyConverterForm_Country").val().trim());
            var amount = Number($("#CurrencyConverterForm_Amount").val().trim());
            var total =amount * rate;

            if (isNaN(amount)) {
                alert("Fill amount input with digits");
            }

          $("#totalAmount").html(total.toFixed(2));
        }


        var CurrencyChange = function () {
            calculate();
            $("#rate").html($("#CurrencyConverterForm_Country").val());
        }

    </script>
