<div id="blog" class="section pb_70 bg_redon">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="heading_s1 text-center">
                    <h2>Today’s Exchange Rates</h2>
                </div>
                <div class="clearfix small_divider"></div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var r in Model.rateList.Take(3))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="pricing_box radius_all_5 box_shadow1 animation animated fadeInUp" data-animation="fadeInUp" data-animation-delay="0.7s" style="animation-delay: 0.7s; opacity: 1;">
                        <div class="pr_title border-bottom">
                            <h4>US Dollar</h4>
                            <div class="price_tage">
                                <img src="~/Content/TopFirstDocument/Photo/@r.Logo" alt="@r.CurrencyName" width="139px" height="91px" />
                            </div>
                        </div>
                        <div class="pr_content pt-3">
                            <ul class="list_none pr_list">
                                <li class="yes"><i class="fa fa-check"></i>We Buy: ₦@r.Buying</li>
                                <li class="yes"><i class="fa fa-check"></i>We Sell: ₦@r.Selling</li>

                            </ul>
                        </div>
                        <div class="pr_footer">
                            <a href="@Url.Action("PreOrder", "Home", new { Area = ""})" class="btn btn-line-fill">Get In Touch</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="section pb_20">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 animation animated fadeInUp" data-animation="fadeInUp" data-animation-delay="0.2s" style="animation-delay: 0.2s; opacity: 1;">
