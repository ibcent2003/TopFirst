                        </div>
                        <div class="blog_content bg-white">
                            <div class="blog_text">
                                <h6 class="blog_title"><a href="@Url.Action("NewsDetails", "Home", new {Id=n.Id, area = "" })">@n.NewsHeadline</a></h6>
                                <ul class="list_none blog_meta">
                                    <li><a href="@Url.Action("NewsDetails", "Home", new {Id=n.Id, area = "" })"><i class="ti-calendar"></i> @n.CreatedDate.ToShortDateString()</a></li>
