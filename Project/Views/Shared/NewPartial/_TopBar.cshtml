<!-- START HEADER -->
<header class="header_wrap fixed-top light_skin sticky_dark_skin main_menu_uppercase header_with_topbar transparent_header">
    <div class="top-header light_skin">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <ul class="contact_detail text-center text-lg-left">
                        <li><i class="ti-mobile"></i>+2348066111112</li>
                        <li><i class="ti-email"></i>info@topfirstexchangebdc.com</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center justify-content-center justify-content-lg-end">
                        <ul class="social_icons text-center text-md-right social_white">
                            <li><a href="#"><i class="ion-social-facebook"></i></a></li>
                            <li><a href="https://twitter.com/top_firstexbdc" target="_blank"><i class="ion-social-twitter"></i></a></li>                                                       
                            <li><a href="https://www.instagram.com/topfirstexchangebdc" target="_blank"><i class="ion-social-instagram-outline"></i></a></li>
                        </ul>
                        <ul class="header_list border-left pl-5">
                            @if (!Request.IsAuthenticated)
                            {
                                <li><a href="@Url.Action("Login", "SGAccount", new { Area = ""})"><i class="icon-login"></i><span>Login</span></a></li>

                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin"})" style="color:white"><i class="icon-dashboard"></i> Dashboard</a>
                                </li>


                                using (Html.BeginForm("LogOff", "SGAccount", new { Area = "" }, FormMethod.Post, new { id = "logoutForm", style = "display: inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li>
                                        <a href="javascript:document.getElementById('logoutForm').submit()" style="color:white">
                                            <i class="icon-logout"></i> Log Out (@User.Identity.Name)
                                        </a>
                                    </li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { Area = ""})">
                <img class="logo_light" src="~/Content/NewFront/assets/images/TOPFIRST.png" width="170" height="45" alt="logo" />
                <img class="logo_dark" src="~/Content/NewFront/assets/images/TOPFIRST.png" width="170" height="45" alt="logo" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-expanded="false">
                <span class="ion-android-menu"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li><a class="nav-link nav_item" href="@Url.Action("Index", "Home", new { Area = ""})">Home</a></li>
                    <li><a class="nav-link nav_item" href="@Url.Action("About", "Home", new { Area = ""})">About</a></li>                    

                    <li class="dropdown">
                        <a class="dropdown-toggle nav-link active" href="#" data-toggle="dropdown">Services</a>
                        <div class="dropdown-menu">
                            <ul>
                                <li><a class="dropdown-item nav-link nav_item" href="@Url.Action("CashPurchase", "Home", new { Area = ""})">Cash purchase sales forex</a></li>
                                <li><a class="dropdown-item nav-link nav_item" href="@Url.Action("CreditCardPayments", "Home", new { Area = ""})">Credit Card Payments</a></li>
                                <li><a class="dropdown-item nav-link nav_item" href="@Url.Action("ForeignPayments", "Home", new { Area = ""})">Sale of Personal/Busines</a></li>
                                <li><a class="dropdown-item nav-link nav_item" href="@Url.Action("Inflow", "Home", new { Area = ""})">Inflow</a></li>

                            </ul>
                        </div>
                    </li>

                   
                    <li><a class="nav-link nav_item" href="@Url.Action("News", "Home", new { Area = ""})">News</a></li>
                    <li><a class="nav-link nav_item" href="@Url.Action("PreOrder", "Home", new { Area = ""})">Order Online</a></li>


                    <li><a class="nav-link nav_item" href="@Url.Action("Contact", "Home", new { Area = ""})">Contact</a></li>
                </ul>
            </div>
            
        </nav>
    </div>
</header>
<!-- END HEADER -->